<Window x:Class="Chess.View.SaveBestPositionsFofWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.View"
        mc:Ignorable="d"
        Title="SaveBestPositionsFofWindow" Height="100" Width="170">
    <Grid>
    <StackPanel Orientation="Vertical">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
        <TextBlock Text="Color :" Width="50" HorizontalAlignment="Right"></TextBlock>
        <ComboBox x:Name="ColorComboBox" Width="100" ></ComboBox>
      </StackPanel>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
        <TextBlock Text="Weight :" Width="50" HorizontalAlignment="Right"></TextBlock>
        <TextBox x:Name="WeightTextBox" Width="100" PreviewTextInput="PreviewTextInput"  ></TextBox>
      </StackPanel>
      <Button Name="SaveButton" Width="100" Height="25" Content="Add" HorizontalAlignment="Center" Click="SaveButton_Click" ></Button>
    </StackPanel>
    



  </Grid>
</Window>
